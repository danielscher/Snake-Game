      </TableView>
      <Button fx:id="clearTableButton" mnemonicParsing="false" onAction="#clearLeaderboard" text="clear leaderboard">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Button>
   </children>
</VBox>
